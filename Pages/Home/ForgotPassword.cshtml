@page
@model Bookings_Hotel.Pages.Home.ForgotPasswordModel
@{
    ViewBag.Title = "Quên Mật Khẩu";
    Layout = "~/Pages/Shared/Layout_Login.cshtml";
}
<form method="post">
    <div class="d-flex align-items-center mb-3 pb-1">
        <span class="h1 fw-bold mb-0">Booking Hotel</span>
    </div>

    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Forgot Your Password?</h5>

    <div class="form-outline mb-4">
        <input type="email" id="email" class="form-control form-control-lg" required />
        <label class="form-label" for="email">Enter your email address</label>
    </div>

    <div class="pt-1 mb-4">
        <button class="btn btn-dark btn-lg btn-block" type="submit">Send OTP</button>
    </div>

    <p class="mb-5 pb-lg-2" style="color: #393f81;">Remembered your password? <a href="/login" style="color: #393f81;">Login here</a></p>
</form>
