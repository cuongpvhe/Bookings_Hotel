@page
@model Bookings_Hotel.Pages.Home.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Pages/Shared/Layout_Login.cshtml";
}

<h2>Đặt lại mật khẩu</h2>

<form method="post">
    <div>
        <label asp-for="NewPassword">Mật khẩu mới</label>
        <input asp-for="NewPassword" type="password" />
        <span asp-validation-for="NewPassword"></span>
    </div>
    <div>
        <label asp-for="ConfirmPassword">Nhập lại mật khẩu mớ</label>
        <input asp-for="ConfirmPassword" type="password" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <button type="submit">Đặt lại mật khẩu</button>
</form>
