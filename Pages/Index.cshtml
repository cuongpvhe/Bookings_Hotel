@page
@model Bookings_Hotel.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!-- Search Room Start -->
<div class="container-fluid booking pb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <div class="bg-white shadow" style="padding: 35px;">
            <form action="/Room">
                <div class="row g-2">
                    <div class="col-md-10">
                        <div class="row g-2">
                            <div class="col-md-2">
                                <div class="date" id="date1" data-target-input="nearest">
                                    <input type="date" id="checkin" name="checkin"
                                           class="form-control datetimepicker-input"
                                           placeholder="Check in" required />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="date" id="date2" data-target-input="nearest">
                                    <input type="date" id="checkout" name="checkout"
                                           class="form-control datetimepicker-input"
                                           placeholder="Check out" required />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <input type="number" name="AdultCount"
                                       class="form-control" placeholder="Số lượng người lớn" />
                            </div>
                            <div class="col-md-2">
                                <input type="number" name="ChildCount"
                                       class="form-control" placeholder="Số lượng trẻ em" />
                            </div>
                            <div class="col-md-3">
                                <div class="dropdown h-100">
                                    <button class="form-select text-start h-100 w-100" type="button"
                                            id="dropdownMenuButton" data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                        Loại phòng
                                    </button>
                                    <ul class="dropdown-menu w-100 p-2" aria-labelledby="dropdownMenuButton"
                                        style="z-index: 1000;">
                                        @foreach (var typeRoom in Model.TypeRooms)
                                        {
                                            <li class="my-2">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox"
                                                           name="SelectedTypeRooms" value="@typeRoom.TypeName"
                                                           id="@typeRoom.TypeId">
                                                    <label class="form-check-label" for="checkbox1">
                                                        @typeRoom.TypeName
                                                    </label>
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Search Room End-->
<!-- About Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6">
                <h6 class="section-title text-start text-primary text-uppercase">Vể chúng tôi</h6>
                <h1 class="mb-4">Chào mừng bạn đến với<span class="text-primary text-uppercase">Hotelier</span></h1>
                <p class="mb-4">
                    Hotelier – nơi đẳng cấp và tinh tế hội tụ. Tận hưởng không gian sang trọng, dịch vụ chu đáo và trải nghiệm hoàn hảo cho kỳ nghỉ của bạn.
                </p>
                <div class="row g-3 pb-4">
                    <div class="col-sm-4 wow fadeIn" data-wow-delay="0.1s">
                        <div class="border rounded p-1">
                            <div class="border rounded text-center p-4">
                                <i class="fa fa-hotel fa-2x text-primary mb-2"></i>
                                <h2 class="mb-1" data-toggle="counter-up">@Model.NumberRoom</h2>
                                <p class="mb-0">Phòng</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 wow fadeIn" data-wow-delay="0.3s">
                        <div class="border rounded p-1">
                            <div class="border rounded text-center p-4">
                                <i class="fa fa-users-cog fa-2x text-primary mb-2"></i>
                                <h2 class="mb-1" data-toggle="counter-up">@Model.NumberService</h2>
                                <p class="mb-0">Dịch vụ</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 wow fadeIn" data-wow-delay="0.5s">
                        <div class="border rounded p-1">
                            <div class="border rounded text-center p-4">
                                <i class="fa fa-users fa-2x text-primary mb-2"></i>
                                <h2 class="mb-1" data-toggle="counter-up">@Model.NumberCustomer</h2>
                                <p class="mb-0">Khách hàng</p>
                            </div>
                        </div>
                    </div>
                </div>
                <a class="btn btn-primary py-3 px-5 mt-2" href="/Room">Khám phá ngay</a>
            </div>
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.1s" src="~/template/img/about-1.jpg" style="margin-top: 25%;">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-100 wow zoomIn" data-wow-delay="0.3s" src="~/template/img/about-2.jpg">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-50 wow zoomIn" data-wow-delay="0.5s" src="~/template/img/about-3.jpg">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.7s" src="~/template/img/about-4.jpg">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
