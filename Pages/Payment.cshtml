@page
@model Bookings_Hotel.Pages.PaymentModel
@{
    ViewData["Title"] = "Payment";
}

<div class="container-fluid booking pb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <div class="bg-white shadow" style="padding: 35px;">
            <div class="row g-2">
                <div class="col-md-10">
                    <div class="row g-2">
                        <div class="col-md-3">
                            <div class="date" id="date1" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input"
                                       placeholder="Check in" data-target="#date1" data-toggle="datetimepicker" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="date" id="date2" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input"
                                       placeholder="Check out" data-target="#date2" data-toggle="datetimepicker" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select">
                                <option selected>Adult</option>
                                <option value="1">Adult 1</option>
                                <option value="2">Adult 2</option>
                                <option value="3">Adult 3</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select">
                                <option selected>Child</option>
                                <option value="1">Child 1</option>
                                <option value="2">Child 2</option>
                                <option value="3">Child 3</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100">Submit</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Room Booking</h6>
            <h1 class="mb-5">Payment  <img src="~/template/img/MB_Bank_Logo.jpeg" width="200" alt=""></h1>
        </div>
        <div class="row g-5">
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-12 text-center">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.1s"
                             src="~/template/img/QR_code_for_mobile_English_Wikipedia.svg.png">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center">
                <div class="wow fadeInUp" data-wow-delay="0.2s">
                    <form>
                        <div class="row g-3">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="name" value="MB Bank" disabled>
                                    <label for="name">Bank</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating input-group">
                                    <input type="text" class="form-control" id="accountNumber"
                                           value="0977 111 993 228" disabled>
                                    <label for="accountNumber">Account Number</label>
                                    <button class="btn btn-outline-secondary" type="button"
                                            onclick="copyToClipboard('Account number has been copied to clipboard.')">
                                        <i class="fa-regular fa-copy"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="money" value="1.200.000 VNĐ" disabled>
                                    <label for="money">Money</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating input-group">
                                    <input type="text" class="form-control" id="accountNumber"
                                           value="i138r00p1" disabled>
                                    <label for="accountNumber">Description</label>
                                    <button class="btn btn-outline-secondary" type="button"
                                            onclick="copyToClipboard('Description has been copied to clipboard.')">
                                        <i class="fa-regular fa-copy"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="button" onclick="successPayment()">Check</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    <script>
        function copyToClipboard(msg) {
            Swal.fire({
                icon: 'success',
                title: 'Copied!',
                text: msg,
                timer: 1000,
                showConfirmButton: false
            });
        }
        function successPayment() {
            Swal.fire({
                icon: 'success',
                title: 'Payment Success!',
                text: 'Please check your email for your invoice.'
            });
        }
    </script>
}