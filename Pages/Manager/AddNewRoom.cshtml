@page
@model Bookings_Hotel.Pages.Manager.AddNewRoomModel
@{
    ViewData["Title"] = "Add new room";
    Layout = "~/Pages/Shared/Layout_admin.cshtml";
}

<head>
    <link rel="stylesheet" href="~/admin_template/css/add-room.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css" rel="stylesheet">

</head>

 <div class="main-header d-flex justify-content-start">

         <div>
            <span class="mb-0 fs-3 fw-bold">Add new room</span>
         </div>
      </div>


<form class="form-container mt-3 p-3 row row-cols-2 mx-0" method="post" id="addRoomForm">
         <div class="col m-0 p-0">
            <div class=" carousel-container">
               <div>
                  <div class="carousel slide" id="carouselExample">
                     <div class="carousel-inner" id="carousel-inner">
                        <!-- Images will be added here dynamically -->
                     </div>
                     <button class="carousel-control-prev" data-bs-slide="prev" data-bs-target="#carouselExample"
                        type="button">
                        <span aria-hidden="true" class="carousel-control-prev-icon"></span>
                        <span class="visually-hidden">Previous</span>
                     </button>
                     <button class="carousel-control-next" data-bs-slide="next" data-bs-target="#carouselExample"
                        type="button">
                        <span aria-hidden="true" class="carousel-control-next-icon"></span>
                        <span class="visually-hidden">Next</span>
                     </button>
                  </div>

                  <div class="mt-2 mb-5 d-flex btn-carousel">
                     <button class="btn btn-primary  me-2" type="button"
                        onclick="document.getElementById('imageInput').click()">Thêm ảnh
                        mới
                     </button>

                     <button class="btn btn-secondary "  type="button" onclick="deleteLastImage()">Xóa ảnh cuối</button>
                  </div>
               </div>
            </div>

            <div class=" me-2 ">

               <input accept="image/*" id="imageInput" onchange="handleImageUpload(this)" style="display: none;"
                  type="file">

               <div class="thumbnail-container">

               </div>
            </div>
         </div>
    <div class="col m-0 p-0" >
        <div class="row">
            <div class="mb-3">
                <label asp-for="NewRoom.RoomNumber" class="form-label"></label>
                <input asp-for="NewRoom.RoomNumber" class="form-control" />
                <span asp-validation-for="NewRoom.RoomNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewRoom.NumberOfBed" class="form-label"></label>
                <input asp-for="NewRoom.NumberOfBed" class="form-control" />
                <span asp-validation-for="NewRoom.NumberOfBed" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewRoom.NumberOfAdult" class="form-label"></label>
                <input asp-for="NewRoom.NumberOfAdult" class="form-control" />
                <span asp-validation-for="NewRoom.NumberOfAdult" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewRoom.NumberOfChild" class="form-label"></label>
                <input asp-for="NewRoom.NumberOfChild" class="form-control" />
                <span asp-validation-for="NewRoom.NumberOfChild" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewRoom.Price" class="form-label"></label>
                <input asp-for="NewRoom.Price" class="form-control" />
                <span asp-validation-for="NewRoom.Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewRoom.TypeId" class="form-label"></label>
                <select asp-for="NewRoom.TypeId" class="form-select">
                    <option selected disabled>Select room type</option>
                    @foreach (var type in Model.TypeRooms)
                    {
                        <option value="@type.TypeId">@type.TypeName</option>
                    }
                </select>
                <span asp-validation-for="NewRoom.TypeId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="roomServices" class="form-label">Room Services <span class="text-danger">*</span></label>
                <select id="roomServices" name="SelectedServiceIds" class="form-select" multiple>
                    @foreach (var service in Model.Services)
                    {
                        <option value="@service.ServiceId">@service.ServiceName</option>
                    }
                </select>
                <span asp-validation-for="SelectedServiceIds" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="note" class="form-label">Description</label>
                <textarea class="form-control" id="note" name="NewRoom.Description" rows="5" placeholder="Enter a description"></textarea>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary px-4 rounded-pill">Save</button>
        </div>
    </div>

      </form>


<!--        Model-->

<div aria-hidden="true" aria-labelledby="cropImageModalLabel" class="modal fade" id="cropImageModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h5 class="modal-title" id="cropImageModalLabel">Chỉnh sửa ảnh</h5>
            </div>
            <div class="modal-body d-flex">
                <div class="model-sidebar d-flex flex-column justify-content-between p-2">
                    <div class="d-flex flex-column btns-container">
                        <div>
                            <button class="btn  mb-2 me-2 btn-edit-img" id="rotateLeft">
                                <i class="bi bi-arrow-counterclockwise"></i>
                            </button>
                            <span class="btn-name">Xoay trái</span>
                        </div>
                        <div>
                            <button class="btn  mb-2 me-2 btn-edit-img" id="rotateRight">
                                <i class="bi bi-arrow-clockwise"></i>
                            </button>
                            <span class="btn-name">Xoay phải</span>
                        </div>

                        <div>
                            <button class="btn  mb-2 me-2 btn-edit-img" id="scaleX">
                                <i class="bi bi-arrows-expand-vertical"></i>

                            </button>
                            <span class="btn-name">Lật ngang</span>
                        </div>
                        <div>
                            <button class="btn  mb-2 me-2 btn-edit-img" id="scaleY">
                                <i class="bi bi-arrows-expand"></i>

                            </button>
                            <span class="btn-name">Lật dọc</span>
                        </div>


                    </div>

                    <div class="row">
                        <div class="col-6 pe-1">
                            <button class="btn btn-primary w-100" id="cropImageButton" type="button">
                                Lưu
                            </button>
                        </div>
                        <div class="col-6 ps-1">
                            <button class="btn  w-100 cancel-btn" data-bs-dismiss="modal" type="button">
                                Hủy
                            </button>
                        </div>
                    </div>
                </div>
                <div class="img-container">
                    <img class="img-fluid" id="imageToCrop" src="">
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
<script src="~/admin_template/js/addRoom.js"></script>


<script>
    // Handle form submission spinner
    document.getElementById('addRoomForm').addEventListener('submit', function (e) {
        // Show loading spinner using SweetAlert2 when form is submitted
        Swal.fire({
            title: 'Saving...',
            text: 'Please wait while we save the room details.',
            allowOutsideClick: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });
    });
</script>

@if (TempData["Success"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Success',
            text: 'Room has been saved successfully!',
            confirmButtonText: 'Close'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/Manager/Rooms';
            }
        });
    </script>
}