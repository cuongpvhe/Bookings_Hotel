@page
@model Bookings_Hotel.Pages.Manager.Customers.DetailModel
@{
    ViewData["Title"] = "Customer Details";
    Layout = "~/Pages/Shared/Layout_admin.cshtml";
}

<h2>Chi tiết người dùng</h2>

<div>
    <h4>Họ và tên: @Model.Account.FullName</h4>
    <p><strong>Id:</strong> @Model.Account.AccountId</p>
    <p><strong>Email:</strong> @Model.Account.Email</p>
    <p><strong>Số điện thoại:</strong> @Model.Account.Phonenumber</p>
    <p><strong>Ngày sinh:</strong> @(Model.Account.Dob.HasValue ? Model.Account.Dob.Value.ToShortDateString() : "N/A")</p>
    <p><strong>Giới tính:</strong> @Model.Account.Gender</p>
    <p><strong>Địa chỉ:</strong> @Model.Account.Address</p>
    <p><strong>Trạng thái:</strong> @Model.Account.Status</p>
    <p><strong>Ngày tạo:</strong> @(Model.Account.CreatedDate.HasValue ? Model.Account.CreatedDate.Value.ToShortDateString() : "N/A")</p>
</div>

<a asp-page="./List" class="btn btn-secondary">Trở về</a>
<a asp-page="./Edit" asp-route-id="@Model.Account.AccountId" class="btn btn-primary">Chỉnh sửa</a>