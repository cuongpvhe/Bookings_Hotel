@page
@model Bookings_Hotel.Pages.Manager.Services.CreateModel
@{
    ViewData["Title"] = "Add Service";
    Layout = "~/Pages/Shared/Layout_admin.cshtml";
}

@section Styles {
    <head>
        <link href="~/admin_template/css/add-room.css" rel="stylesheet" />
        <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    </head>
}
<div class="card p-4">
    <h2 class="text-center">Create Service</h2>
    @if (!ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul class="mb-0">
                @foreach (var modelError in ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@modelError.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form class="form-container mt-3 p-3 row row-cols-2 mx-0" method="post" id="addTypeRoomForm" enctype="multipart/form-data">
        <div class="col m-0 p-0">
            <div class="carousel-container">
                <div>
                    <div class="carousel slide" id="serviceCarousel">
                        <div class="carousel-inner" id="carousel-inner">
                            <!-- Images will be added here dynamically -->
                        </div>
                        <button class="carousel-control-prev" data-bs-slide="prev" data-bs-target="#serviceCarousel"
                                type="button">
                            <span aria-hidden="true" class="carousel-control-prev-icon"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" data-bs-slide="next" data-bs-target="#serviceCarousel"
                                type="button">
                            <span aria-hidden="true" class="carousel-control-next-icon"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>

                    <div class="mt-2 mb-5 d-flex btn-carousel">
                        <button class="btn btn-primary me-2" type="button"
                                onclick="document.getElementById('imageInput').click()">
                            Thêm ảnh mới
                        </button>
                        <button class="btn btn-secondary" type="button" onclick="deleteLastImage()">Xóa ảnh cuối</button>
                    </div>
                    <input type="file" id="imageInput" style="display: none;" accept="image/*" onchange="addImage(event)" />
                </div>
            </div>
        </div>



        <div class="card p-4 col m-0 p-0">
            <div class="form-group mb-3">
                <label asp-for="service.ServiceName" class="form-label">Service Name <span class="text-danger">*</span></label>
                <input type="text" asp-for="service.ServiceName" class="form-control" required />
                <span asp-validation-for="service.ServiceName" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="service.CreatedDate" class="form-label">Created Date</label>
                        <input type="date" asp-for="service.CreatedDate" class="form-control bg-opacity-10" disabled />
                        <input type="hidden" asp-for="service.CreatedDate" />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="service.UpdateDate" class="form-label">Update Date</label>
                        <input type="date" asp-for="service.UpdateDate" class="form-control bg-opacity-10" disabled />
                        <input type="hidden" asp-for="service.UpdateDate" />
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="service.Price" class="form-label">Price <span class="text-danger">*</span></label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="number" asp-for="service.Price" class="form-control" step="0.01" min="0" required />
                </div>
                <span asp-validation-for="service.Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="service.Description" class="form-label">Description</label>
                <textarea asp-for="service.Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="service.Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="service.Status" class="form-label">Status</label>
                <select asp-for="service.Status" class="form-select">
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
                <span asp-validation-for="service.Status" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-center gap-2">
                <button type="submit" class="btn btn-primary px-4">
                    Create Service
                </button>
                <a asp-page="./List" class="btn btn-secondary px-4">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Format price input
        document.querySelector('input[type="number"]').addEventListener('input', function (e) {
            if (this.value < 0) this.value = 0;
        });

        let imageCounter = 0;
        function addImage(event) {
            const files = event.target.files;
            const carouselInner = document.getElementById('carousel-inner');

            for (let i = 0; i < files.length; i++) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const newDiv = document.createElement('div');
                    newDiv.className = (imageCounter === 0 ? "carousel-item active" : "carousel-item");
                    newDiv.innerHTML = `<img src="${e.target.result}" class="d-block w-100" alt="Service Image">`;
                    carouselInner.appendChild(newDiv);
                    imageCounter++;
                };
                reader.readAsDataURL(files[i]);
            }
        }

        function deleteLastImage() {
            const carouselInner = document.getElementById('carousel-inner');
            if (carouselInner.lastChild) {
                carouselInner.removeChild(carouselInner.lastChild);
                imageCounter--;
            }
        }


        function addImage(event) {
            const files = event.target.files;
            const carouselInner = document.getElementById('carousel-inner');

            for (let i = 0; i < files.length; i++) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const newDiv = document.createElement('div');
                    newDiv.className = (imageCounter === 0 ? "carousel-item active" : "carousel-item");
                    newDiv.innerHTML = `<img src="${e.target.result}" class="d-block w-100" alt="Service Image">`;
                    carouselInner.appendChild(newDiv);
                    imageCounter++;

                    // Add image URL to hidden input
                    document.getElementById('imageUrls').value += e.target.result + ",";
                };
                reader.readAsDataURL(files[i]);
            }
        }

    </script>

    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/admin_template/js/addtyperoom.js"></script>
    <script>
        $(document).ready(function () {
            $('.js-example-basic-multiple').select2();
        });
    </script>
}


