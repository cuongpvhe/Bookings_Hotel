    <form class="form-container mt-3 p-3 row row-cols-2 mx-0" method="post" id="addServiceForm" enctype="multipart/form-data">
    <div class="col m-0 p-0">
        <div class="carousel-container">
            <div>
                <div class="carousel slide" id="carouselExample">
                    <div class="carousel-inner" id="carousel-inner">
                        <!-- Images will be added here dynamically -->
                    </div>
                    <button class="carousel-control-prev" data-bs-slide="prev" data-bs-target="#carouselExample"
                            type="button">
                        <span aria-hidden="true" class="carousel-control-prev-icon"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" data-bs-slide="next" data-bs-target="#carouselExample"
                            type="button">
                        <span aria-hidden="true" class="carousel-control-next-icon"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>

                <div class="mt-2 mb-5 d-flex btn-carousel">
                    <button class="btn btn-primary me-2" type="button"
                            onclick="document.getElementById('imageInput').click()">
                        Thêm ảnh mới
                    </button>
                    <button class="btn btn-secondary" type="button" onclick="deleteLastImage()">Xóa ảnh cuối</button>
                </div>
            </div>
        </div>

        <div class="me-2">
            <input accept="image/*" id="imageInput" onchange="handleImageUpload(this)" style="display: none;"
                   type="file">

            <div class="thumbnail-container"></div>
        </div>
    </div>



        <div class="ps-2 col m-0 p-0">
            <div class="form-group mb-3">
                <label asp-for="service.ServiceName" class="form-label">Tên dịch vụ<span class="text-danger">*</span></label>
            <input type="text" asp-for="service.ServiceName" name="ServiceName" id="ServiceName" class="form-control" required />
                <span asp-validation-for="service.ServiceName" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="service.CreatedDate" class="form-label">Ngày tạo</label>
                        <input type="date" asp-for="service.CreatedDate" class="form-control bg-opacity-10" disabled />
                        <input type="hidden" asp-for="service.CreatedDate" />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="service.UpdateDate" class="form-label">Ngày cập nhật</label>
                        <input type="date" asp-for="service.UpdateDate" class="form-control bg-opacity-10" disabled />
                        <input type="hidden" asp-for="service.UpdateDate" />
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="service.Price" class="form-label">Giá <span class="text-danger"> *</span></label>
                <div class="input-group">
                    <input type="number" asp-for="service.Price" class="form-control" step="0.01" min="0" required />
                    <span class="input-group-text">VND</span>
                </div>
                <span asp-validation-for="service.Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="service.Description" class="form-label">Mô tả</label>
                <textarea asp-for="service.Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="service.Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="service.Status" class="form-label">Trạng thái</label>
                <select asp-for="service.Status" class="form-select">
                    <option value="Active">Hoạt động</option>
                    <option value="Inactive">Không hoạt động</option>
                </select>
                <span asp-validation-for="service.Status" class="text-danger"></span>
            </div>


        <div class="d-flex justify-content-center">
            <a type="button" class="btn btn-outline-dark px-4 rounded-pill me-2" asp-page="./List">Hủy</a>
            <button type="submit" class="btn btn-primary px-4 rounded-pill" >Lưu</button>
        </div>
        </div>
    </form>

