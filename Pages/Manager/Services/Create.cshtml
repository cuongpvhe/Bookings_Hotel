@page
@model Bookings_Hotel.Pages.Manager.Services.CreateModel
@{
    ViewData["Title"] = "Add Service";
    Layout = "~/Pages/Shared/Layout_admin.cshtml";
}

@section Styles {
    <head>
        <link rel="stylesheet" href="~/admin_template/css/add-room.css" />
        <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    </head>
}
<div class="card p-4">
    <h2 class="text-center">Thêm dịch vụ mới</h2>
    @if (!ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul class="mb-0">
                @foreach (var modelError in ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@modelError.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form class="form-container mt-3 p-3 row row-cols-2 mx-0" method="post" id="addServiceForm" enctype="multipart/form-data">
        <div class="col m-0 p-0">
            <div class="carousel-container">
                <div>
                    <div class="carousel slide" id="serviceCarousel">
                        <div class="carousel-inner" id="carousel-inner">
                            <!-- Images will be added here dynamically -->
                        </div>
                        <button class="carousel-control-prev" data-bs-slide="prev" data-bs-target="#serviceCarousel"
                                type="button">
                            <span aria-hidden="true" class="carousel-control-prev-icon"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" data-bs-slide="next" data-bs-target="#serviceCarousel"
                                type="button">
                            <span aria-hidden="true" class="carousel-control-next-icon"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>

                    <div class="mt-2 mb-5 d-flex btn-carousel">
                        <button class="btn btn-primary me-2" type="button"
                                onclick="document.getElementById('imageInput').click()">
                            Thêm ảnh mới
                        </button>
                        <button class="btn btn-secondary" type="button" onclick="deleteLastImage()">Xóa ảnh cuối</button>
                    </div>
                    <input type="file" id="imageInput" style="display: none;" accept="image/*" onchange="addImage(event)" />
                </div>
            </div>
        </div>



        <div class="card p-4 col m-0 p-0">
            <div class="form-group mb-3">
                <label asp-for="service.ServiceName" class="form-label">Tên dịch vụ<span class="text-danger">*</span></label>
                <input type="text" asp-for="service.ServiceName" class="form-control" required />
                <span asp-validation-for="service.ServiceName" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="service.CreatedDate" class="form-label">Ngày tạo</label>
                        <input type="date" asp-for="service.CreatedDate" class="form-control bg-opacity-10" disabled />
                        <input type="hidden" asp-for="service.CreatedDate" />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="service.UpdateDate" class="form-label">Ngày cập nhật</label>
                        <input type="date" asp-for="service.UpdateDate" class="form-control bg-opacity-10" disabled />
                        <input type="hidden" asp-for="service.UpdateDate" />
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="service.Price" class="form-label">Giá <span class="text-danger">*</span></label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="number" asp-for="service.Price" class="form-control" step="0.01" min="0" required />
                </div>
                <span asp-validation-for="service.Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="service.Description" class="form-label">Mô tả</label>
                <textarea asp-for="service.Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="service.Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="service.Status" class="form-label">Trạng thái</label>
                <select asp-for="service.Status" class="form-select">
                    <option value="Active">Hoạt động</option>
                    <option value="Inactive">Không hoạt động</option>
                </select>
                <span asp-validation-for="service.Status" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-center gap-2">
                <button type="submit" class="btn btn-primary px-4">
                    Thêm dịch vụ
                </button>
                <a asp-page="./List" class="btn btn-secondary px-4">Trở lại</a>
            </div>
        </div>
    </form>
</div>


<div aria-hidden="true" aria-labelledby="cropImageModalLabel" class="modal fade" id="cropImageModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h5 class="modal-title" id="cropImageModalLabel">Chỉnh sửa ảnh</h5>
            </div>
            <div class="modal-body d-flex">
                <div class="model-sidebar d-flex flex-column justify-content-between p-2">
                    <div class="d-flex flex-column btns-container">
                        <div>
                            <button class="btn  mb-2 me-2 btn-edit-img" id="rotateLeft">
                                <i class="bi bi-arrow-counterclockwise"></i>
                            </button>
                            <span class="btn-name">Xoay trái</span>
                        </div>
                        <div>
                            <button class="btn  mb-2 me-2 btn-edit-img" id="rotateRight">
                                <i class="bi bi-arrow-clockwise"></i>
                            </button>
                            <span class="btn-name">Xoay phải</span>
                        </div>

                        <div>
                            <button class="btn  mb-2 me-2 btn-edit-img" id="scaleX">
                                <i class="bi bi-arrows-expand-vertical"></i>

                            </button>
                            <span class="btn-name">Lật ngang</span>
                        </div>
                        <div>
                            <button class="btn  mb-2 me-2 btn-edit-img" id="scaleY">
                                <i class="bi bi-arrows-expand"></i>

                            </button>
                            <span class="btn-name">Lật dọc</span>
                        </div>


                    </div>

                    <div class="row">
                        <div class="col-6 pe-1">
                            <button class="btn btn-primary w-100" id="cropImageButton" type="button">
                                Lưu
                            </button>
                        </div>
                        <div class="col-6 ps-1">
                            <button class="btn  w-100 cancel-btn" data-bs-dismiss="modal" type="button">
                                Hủy
                            </button>
                        </div>
                    </div>
                </div>
                <div class="img-container">
                    <img class="img-fluid" id="imageToCrop" src="">
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Format price input
        document.querySelector('input[type="number"]').addEventListener('input', function (e) {
            if (this.value < 0) this.value = 0;
        });


    </script>

